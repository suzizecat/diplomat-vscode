        "statusBar.background": "#471316",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#6f1e22",
        "statusBarItem.remoteBackground": "#471316",
        "statusBarItem.remoteForeground": "#e7e7e7",
