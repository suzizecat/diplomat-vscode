{
	"name": "diplomat-host",
	"displayName": "diplomat-host",
	"description": "",
	"publisher": "jfaucher",
	"version": "0.0.1",
	"repository": {},
	"engines": {
		"vscode": "^1.48.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:diplomat-host.helloWorld",
		"onLanguage:systemverilog"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "diplomat-host.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "diplomat-host.testserver",
				"title": "Test diplomat connexion"
			},
			{
				"command": "diplomat-host.instanciate",
				"title": "Instanciate module"
			},
			{
				"command": "diplomat-server.get-modules",
				"title": "Get a list of available modules"
			},
			{
				"command": "diplomat-server.get-configuration",
				"title": "Diplomat: Update server configuration"
			},
			{
				"command": "diplomat-server.full-index",
				"title": "Diplomat: Reindex"
			},
			{
				"command": "diplomat-server.reorder-files",
				"title": "Diplomat: Reorder"
			},
			{
				"command": "diplomat-server.reindex",
				"title": "Diplomat: Index the Workspace"
			}
		],
		"languages": [
			{
				"id": "systemverilog",
				"aliases": [
					"System Verilog",
					"systemverilog"
				],
				"extensions": [
					".sv",
					".SV",
					".svh",
					".SVH"
				],
				"configuration": "./configs/systemverilog.configuration.json"
			}
		],
		"configuration": {
			"title": "Diplomat Server",
			"properties": {
				"diplomatServer.backend.veribleInstallPath": {
					"scope": "resource",
					"description": "Verible install path",
					"type": "string",
					"default": ""
				},
				"diplomatServer.indexFilePath": {
					"scope": "resource",
					"description": "File path for the indexer json file",
					"type": "string",
					"default": ""
				},
				"diplomatServer.fileListPath": {
					"scope": "resource",
					"description": "File path for the indexer filelist",
					"type": "string",
					"default": "./filelist.flst"
				},
				"diplomatServer.usePrebuiltIndex": {
					"scope": "resource",
					"description": "Directly use a JSON file specified in @indexFilePath and don't actually run the indexer",
					"type": "boolean",
					"default": false
				},
				"diplomatServer.serverCommand": {
					"description": "Server command",
					"type": "string",
					"default": ""
				},
				"diplomatServer.server.useTCP": {
					"description": "Use TCP connection to an already started LS",
					"type": "boolean",
					"default": false
				},
				"diplomatServer.pythonCommand": {
					"description": "Python command",
					"type": "string",
					"default": "python3"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.81.0",
		"@types/glob": "^8.1.0",
		"@types/node": "^20.5.1",
		"eslint": "^8.47.0",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"glob": "^10.3.3",
		"typescript": "^5.1.6",
		"@vscode/test-electron": "^2.3.4"
	},
	"dependencies": {
		"vscode-languageclient": "8.2.0-next.0"
	}
}
